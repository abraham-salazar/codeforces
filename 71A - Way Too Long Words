#include <bits/stdc++.h>
#include<iostream>
using namespace std;
 
int main()
{
//Declare variables, n to the number of words and l to the lengt of the words
    int n, l = 0;
    cin>>n;
    for (int i = 0; i < n; i++){
        string  a;
        cin>>a;
        l = a.length();
        if(a.length() > 10){
            cout<<a[0]<<(l - 2)<<a[l- 1]<<"\n"; 
        }
        if (a.length() <= 10){
            cout<<a<<"\n";
        }
    }
 
    return 0;
}
