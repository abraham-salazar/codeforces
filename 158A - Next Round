#include <iostream>

using namespace std;

int main()
{
    int n, k, sum = 0;
    int a[102];
    cin>>n>>k;
    for(int i = 1; i < n + 1; i++){
        cin>>a[i];
    }
    for(int i = 1; i < n + 1; i++){
        if((a[i] > 0) &&(a[i] >= a[k])){
            sum++;
        }}
    cout<<sum;
    
    return 0;
}
